storage:
  devices:
    - /dev/sda
  lvm:
    vg: "vg0"
    size: "15G"
  partitions:
    - mount_point: "/boot/efi"
      size: "512M"
      filesystem: "vfat"
      partition: 1
    - mount_point: "/boot"
      size: "512M"
      filesystem: "ext4"
      partition: 2
    - mount_point: "/"
      size: "3G"
      filesystem: "ext4"
      partition: 3
      type: "lvm"
      lvm:
        vg: "vg0"
        name: "root"
    - mount_point: "/home"
      size: "1G"
      filesystem: "ext4"
      partition: 3
      type: "lvm"
      lvm:
        vg: "vg0"
        name: "home"
    - mount_point: "/var"
      size: "1G"
      filesystem: "ext4"
      partition: 3
      type: "lvm"
      lvm:
        vg: "vg0"
        name: "var"
system:
  hostname: "debian-server"
  locale: "LANG=C.UTF-8"

network:
  interface: "eth0"
  ip_address: "dhcp"

users:
  - username: "admin"
    password: "changeme"
    groups:
      - "sudo"

packages:
  - openssh-server
  - sudo
  - vim

bootloader:
  type: "grub"
  efi: true

installation:
  mount_point: "/mnt/debian"
  architecture: "amd64"
  debian_version: "bookworm"

log_file: "/tmp/debian_install.log"
